<div class="coupon-code form-group" data-hook='coupon_code'>
  <%= form_for order, url: update_checkout_path(order.state) do |form| %>
    <%= form.label :coupon_code %>
    <%= form.text_field :coupon_code, placeholder: true, class: 'form-control' %>

    <button type="submit" class="btn btn-info btn-blocks coupon-code-apply-button" id="coupon-code-apply-button">
      <%= t('spree.apply_code') %>
    </button>
  <% end %>

  <div id='coupon_status'></div>
</div>
